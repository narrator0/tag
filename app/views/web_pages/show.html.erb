<section class="section">
  <div class="container">
    <h1 class="title"><%= @web_page.url %></h1>
    <hr>

    <% @posts.each do |post| %>
      <h2 class="title is-4">
        <%= post.user.name %>
        <span class="tag is-light"><%= time_ago_in_words(post.created_at) %> ago</span>
      </h2>
      <p class="content">
        <%= post.content %>
      </p>
    <% end %>

    <div class="columns">
      <div class="column is-4">
        <%= form_for [@web_page, Post.new] do |f| %>
          <div class="field">
            <%= f.label :comment, class: 'label' %>
            <div class="control">
              <%= f.text_area :content, class: 'input' %>
            </div>
          </div>
          <%= f.submit 'submit', class: 'button is-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</section>
